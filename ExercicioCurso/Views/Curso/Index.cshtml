
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center text-danger">Cursos</h3>
            </div>
        </div>
        <div class="row mb-2">
            <div class="col-4">
                <form action="/curso/index" method="get">
                    <input type="text" name="busca" value="@Request.QueryString["busca"]" autofocus placeholder="busca" />
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>

                </form>
            </div>
            <div class="col-8">
                <div class="float-right">
                    <a class="btn btn-primary" href="/curso/cadastrar"><i class="fas fa-plus"></i> Novo Curso</a>
                </div>
            </div>
        </div>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-tema">Tema</th>
                    <th class="coluna-inscritos">Inscritos</th>
                    <th class="coluna-datacurso">Data do Curso</th>
                    <th class="coluna-confirmado">Confirmado</th>
                    <th class="coluna-estado">Estado</th>
                    <th class="coluna-cidade">Cidade</th>
                    <th class="coluna-valor">Bairro</th>
                    <th class="coluna-valor">Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ExercicioCurso.Models.Curso curso in ViewBag.Cursos)
                {
                    <tr>
                        <td>@curso.Id</td>
                        <td>@curso.Tema</td>
                        <td>@curso.Inscritos</td>
                        <td>@curso.DataCurso</td>
                        @if (curso.Confirmado)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        <td>@curso.Estado</td>
                        <td>@curso.Cidade</td>
                        <td>@curso.Bairro</td>
                        <td>@curso.Valor</td>
                        <td>
                            <a href="/curso/editar/@curso.Id" class="text-success mr-2"
                               data-toggle="tooltip"
                               data-placement="top"
                               title="Editar o registro"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/curso/delete/@curso.Id" class="text-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-tema">Tema</th>
                    <th class="coluna-inscritos">Inscritos</th>
                    <th class="coluna-datacurso">Data do Curso</th>
                    <th class="coluna-confirmado">Confirmado</th>
                    <th class="coluna-estado">Estado</th>
                    <th class="coluna-cidade">Cidade</th>
                    <th class="coluna-valor">Bairro</th>
                    <th class="coluna-valor">Valor</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>

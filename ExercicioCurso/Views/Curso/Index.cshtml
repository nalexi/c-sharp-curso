
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h3>Cursos</h3>
        <a href="/curso/cadastrar">Novo Curso</a>
        <form action="/curso/index" method="get">
            <input type="text" name="busca" value="@Request.QueryString["busca"]" autofocus />
            <input type="submit" value="Busca Curso" />
        </form>
        <table>
            <thead>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-tema">Tema</th>
                    <th class="coluna-inscritos">Inscritos</th>
                    <th class="coluna-datacurso">Data do Curso</th>
                    <th class="coluna-confirmado">Confirmado</th>
                    <th class="coluna-estado">Estado</th>
                    <th class="coluna-cidade">Cidade</th>
                    <th class="coluna-valor">Bairro</th>
                    <th class="coluna-valor">Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ExercicioCurso.Models.Curso curso in ViewBag.Cursos)
                {
                    <tr>
                        <td>@curso.Id</td>
                        <td>@curso.Tema</td>
                        <td>@curso.Inscritos</td>
                        <td>@curso.DataCurso</td>
                        @if (curso.Confirmado)
                        {
                            <td>Sim</td>
                        }
                        else
                        {
                            <td>Não</td>
                        }
                        <td>@curso.Estado</td>
                        <td>@curso.Cidade</td>
                        <td>@curso.Bairro</td>
                        <td>@curso.Valor</td>
                        <td>
                            <a href="/curso/editar/@curso.Id">Editar</a>
                            <a href="/curso/delete/@curso.Id">Apagar</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th class="coluna-codigo">Codigo</th>
                    <th class="coluna-tema">Tema</th>
                    <th class="coluna-inscritos">Inscritos</th>
                    <th class="coluna-datacurso">Data do Curso</th>
                    <th class="coluna-confirmado">Confirmado</th>
                    <th class="coluna-estado">Estado</th>
                    <th class="coluna-cidade">Cidade</th>
                    <th class="coluna-valor">Bairro</th>
                    <th class="coluna-valor">Valor</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>
